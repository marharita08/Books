<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Books" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Books.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Books.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Books.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WrapContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MatchParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MatchParentWrapContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- header styles -->
    <style name="HeaderStyle" parent="WrapContentStyle">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Header1Style" parent="HeaderStyle">
        <item name="android:textSize">@dimen/header_1_font_size</item>
    </style>
    <style name="Header2Style" parent="HeaderStyle">
        <item name="android:textSize">@dimen/header_2_font_size</item>
    </style>
    <style name="Header3Style" parent="HeaderStyle">
        <item name="android:textSize">@dimen/header_3_font_size</item>
    </style>
    <style name="Header4Style" parent="HeaderStyle">
        <item name="android:textSize">@dimen/header_4_font_size</item>
    </style>
    <style name="TextStyle" parent="WrapContentStyle">
        <item name="android:textSize">@dimen/content_font_size</item>
    </style>

    <!-- style for scroll views on activities user, login, signup -->
    <style name="UserScrollViewStyle" parent="MatchParentWrapContentStyle">
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- style for fields on activities user, login, signup -->
    <style name="TextInputStyle">
        <item name="android:layout_width">@dimen/text_input_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- style for to Login/to Sign up -->
    <style name="MoveToStyle" parent="WrapContentStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="ColumnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NavigationMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="SplashScreenImageStyle" parent="WrapContentStyle">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BookListStyle" parent="WrapContentStyle">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <!-- styles for dialog -->
    <style name="DialogBookCoverStyle">
        <item name="android:layout_width">@dimen/dialog_cover_photo_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DialogReviewStyle" parent="MatchParentWrapContentStyle">
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- styles for images -->
    <style name="ProfileAvatarStyle">
        <item name="android:layout_width">@dimen/profile_avatar_width</item>
        <item name="android:layout_height">@dimen/profile_avatar_width</item>
    </style>
    <style name="BookCoverPhotoStyle">
        <item name="android:layout_width">@dimen/book_cover_photo_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AuthorPhotoStyle">
        <item name="android:layout_width">@dimen/author_photo_width</item>
        <item name="android:layout_height">@dimen/author_photo_width</item>
    </style>
    <style name="NavAvatarStyle">
        <item name="android:layout_width">@dimen/nav_avatar_width</item>
        <item name="android:layout_height">@dimen/nav_avatar_width</item>
    </style>

    <!-- book card styles -->
    <style name="BookCardLayoutStyle" parent="WrapContentStyle">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="BookCardCoverPhotoStyle">
        <item name="android:layout_width">@dimen/book_card_photo_with</item>
        <item name="android:layout_height">@dimen/book_card_photo_height</item>
    </style>
    <style name="BookCardTitleStyle">
        <item name="android:layout_width">@dimen/book_card_photo_with</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/book_card_title_font_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="NavHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_header_height</item>
    </style>

    <style name="ReviewAvatarStyle">
        <item name="android:layout_width">@dimen/review_avatar_width</item>
        <item name="android:layout_height">@dimen/review_avatar_width</item>
    </style>

</resources>
